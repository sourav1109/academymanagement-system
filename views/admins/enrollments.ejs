<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrolled Students</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .fullscreen-img {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1050;
        }

        .fullscreen-img img {
            max-width: 90%;
            max-height: 90%;
        }

        .fullscreen-img .close-btn {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 30px;
            color: white;
            cursor: pointer;
        }
    </style>
    <script>
        function toggleRemarksField(id) {
            const remarksField = document.getElementById(`remarks-${id}`);
            remarksField.style.display = remarksField.style.display === 'none' ? 'block' : 'none';
        }

        async function updateRemarks(tournamentId, enrollmentId) {
            const remarksField = document.getElementById(`remarks-${enrollmentId}`);
            const remarks = remarksField.value;

            const response = await fetch(`/admins/tournaments/${tournamentId}/enrollments/${enrollmentId}/remarks`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ remarks })
            });

            const data = await response.json();
            alert(data.message);
            if (data.alertType === 'success') {
                remarksField.style.display = 'none';
            }
        }

        function openImage(src) {
            const fullscreenImg = document.getElementById('fullscreen-img');
            const img = fullscreenImg.querySelector('img');
            img.src = src;
            fullscreenImg.style.display = 'flex';
        }

        function closeImage() {
            const fullscreenImg = document.getElementById('fullscreen-img');
            fullscreenImg.style.display = 'none';
        }

        async function handleAction(tournamentId, enrollmentId, action) {
            const reason = action === 'decline' ? prompt("Enter reason for declining (optional):") : null;
            const response = await fetch(`/admins/tournaments/${tournamentId}/enrollments/${enrollmentId}/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ action, reason })
            });

            const data = await response.json();
            alert(data.message);
            if (data.alertType === 'success') {
                location.reload(); // Refresh the page to reflect changes
            }
        }
    </script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Enrolled Students for <%= tournament.name %></h2>
        <a href="/admins/dashboard" class="btn btn-primary mb-4">Back to Dashboard</a>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Category</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Payment Proof</th>
                        <th>Actions</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    <% tournament.enrollmentRequests.forEach(enrollment => { %>
                        <tr>
                            <td><%= enrollment.name %></td>
                            <td><%= enrollment.age %></td>
                            <td><%= enrollment.category %></td>
                            <td><%= enrollment.email %></td>
                            <td><%= enrollment.phone %></td>
                            <td><%= enrollment.status %></td>
                            <td>
                                <img src="<%= enrollment.paymentProof %>" alt="Payment Proof" style="width: 100px; cursor: pointer;" onclick="openImage('<%= enrollment.paymentProof %>')">
                            </td>
                            <td>
                                <button 
        class="btn btn-success btn-sm mb-1" 
        onclick="handleAction('<%= tournament._id %>', '<%= enrollment._id %>', 'approve')" 
        <%= enrollment.status === 'Approved' ? 'disabled' : '' %>>
        Approve
    </button>
    <button 
        class="btn btn-danger btn-sm mb-1" 
        onclick="handleAction('<%= tournament._id %>', '<%= enrollment._id %>', 'decline')" 
        <%= enrollment.status === 'Declined' ? 'disabled' : '' %>>
        Decline
    </button>
                                <form action="/admins/tournaments/<%= tournament._id %>/enrollments/<%= enrollment._id %>/delete" method="POST">
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= tournament._id %>', '<%= enrollment._id %>')">Delete</button>
                                </form>
                            </td>
                            <td>
                                <button class="btn btn-secondary btn-sm btn-block mb-1" onclick="toggleRemarksField('<%= enrollment._id %>')">View/Add Remarks</button>
                                <textarea id="remarks-<%= enrollment._id %>" class="form-control mb-1" style="display: none;"><%= enrollment.remarks %></textarea>
                                <button class="btn btn-primary btn-sm btn-block" onclick="updateRemarks('<%= tournament._id %>', '<%= enrollment._id %>')">Save Remarks</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div id="fullscreen-img" class="fullscreen-img" onclick="closeImage()">
        <span class="close-btn">&times;</span>
        <img src="" alt="Full Screen Image">
    </div>
    <script>
        async function confirmDelete(tournamentId, enrollmentId) {
            const isConfirmed = confirm("Are you sure you want to delete this enrollment?");
            if (!isConfirmed) {
                return; // Do nothing if the user cancels
            }
    
            try {
                const response = await fetch(`/admins/tournaments/${tournamentId}/enrollments/${enrollmentId}/delete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
    
                const data = await response.json();
                alert(data.message);
    
                if (data.alertType === 'success') {
                    location.reload(); // Refresh the page to reflect the changes
                }
            } catch (error) {
                alert("An error occurred while deleting the enrollment. Please try again.");
                console.error("Delete error:", error);
            }
        }
    </script>
    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
