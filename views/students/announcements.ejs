<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Announcements</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .announcement-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .announcement-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .announcement-icon {
            font-size: 2rem;
            color: #007bff;
            margin-right: 10px;
        }

        .card-title {
            font-weight: bold;
        }

        .card-footer {
            background-color: #f1f1f1;
            border-top: 1px solid #ddd;
        }

        .posted-date {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .empty-state {
            text-align: center;
            color: #6c757d;
            margin-top: 50px;
        }

        .filter-bar {
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .filter-bar button {
            background-color: #007bff;
            color: white;
        }

        .filter-bar button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <!-- Back to Dashboard Button -->
        <div class="mb-4">
            <a href="/students/dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <!-- Title Section -->
        <div class="text-center mb-4">
            <h1 class="display-6">Latest Announcements</h1>
            <p class="text-muted">Stay informed with the latest updates and news</p>
        </div>

        <!-- Filter Section -->
        <div class="filter-bar mb-4">
            <form method="GET" action="/students/announcements">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label for="startDate" class="form-label">Start Date:</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" required>
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label">End Date:</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" required>
                    </div>
                    <div class="col-md-4 text-end">
                        <button type="submit" class="btn btn-primary mt-4">Filter</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Announcements Section -->
        <% if (announcements.length > 0) { %>
            <div class="row">
                <% announcements.forEach(announcement => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card announcement-card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-bullhorn announcement-icon"></i>
                                    <h5 class="card-title mb-0"><%= announcement.title %></h5>
                                </div>
                                <hr>
                                <p class="card-text"><%= announcement.content %></p>
                            </div>
                            <div class="card-footer text-end">
                                <% if (announcement.createdBy) { %>
                                    <span class="posted-date">Posted by <strong><%= announcement.createdBy.name %></strong> (UID: <%= announcement.createdBy.uid %>) on <%= announcement.date.toDateString() %></span>
                                <% } else { %>
                                    <span class="posted-date">Posted on <%= announcement.date.toDateString() %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                <h5>No announcements available for the selected date range.</h5>
                <p>Please try a different date range or check back later.</p>
            </div>
        <% } %>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
