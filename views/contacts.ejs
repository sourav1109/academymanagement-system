        feather.replace();
    </script>

    <br>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10 contact-container">
                <div class="row">
                    <div class="col-md-4 contact-info">
                        <h4>Contact Us</h4>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                        <div class="mt-4">
                            <i class="fas fa-map-marker-alt"></i>
                            <p><strong>Address:</strong><br>4671 Sugar Camp Road, Owatonna, Minnesota, 55060</p>
                        </div>
                        <div class="mt-3">
                            <i class="fas fa-phone"></i>
                            <p><strong>Phone:</strong><br>571-457-2321</p>
                        </div>
                        <div class="mt-3">
                            <i class="fas fa-envelope"></i>
                            <p><strong>Email:</strong><br>ntamerrwael@mfano.ga</p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-container">
                            <h3>Send Message</h3>
                            <form>
                                <div class="form-group">
                                    <label for="fullName">Full Name</label>
                                    <input type="text" class="form-control" id="fullName" placeholder="Full Name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" id="message" rows="4" placeholder="Type your Message..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-custom btn-block">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Font Awesome for Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- Feather Icons -->
