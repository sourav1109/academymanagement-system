<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mark Staff Attendance</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Mark Staff Attendance</h1>
        <form action="/admins/attendance/staff" method="POST">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    <% staff.forEach(staffMember => { %>
                        <tr>
                            <td><%= staffMember.name %></td>
                            <td>
                                <select name="attendance[<%= staffMember._id %>]" class="form-control">
                                    <option value="Not Marked" <%= staffMember.status === 'Not Marked' ? 'selected' : '' %>>Not Marked</option>
                                    <option value="Present" <%= staffMember.status === 'Present' ? 'selected' : '' %>>Present</option>
                                    <option value="Absent" <%= staffMember.status === 'Absent' ? 'selected' : '' %>>Absent</option>
                                </select>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save Attendance</button>
            </div>
        </form>
    </div>
</body>
</html>
