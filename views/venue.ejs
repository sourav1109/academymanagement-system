    align-items: center;
    gap: 20px; /* Added for consistent spacing */
}

.gallery-item {
    width: calc(25% - 20px); /* Adjusts to 3 items per row */
    margin: 10px;
    overflow: hidden;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f3f3f3; /* Optional background color */
    aspect-ratio: 4 / 3; /* Ensures consistent item aspect ratio */
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures images fill the item without distortion */
    transition: transform 0.3s ease;
}

.gallery-item img:hover {
    transform: scale(1.1);
