<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rectification Requests</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <header class="bg-primary text-white p-3">
        <div class="container">
            <h1>Rectification Requests</h1>
        </div>
    </header>

    <main class="container mt-5">
        <h2>Pending Requests</h2>
        <ul class="list-group">
            <% requests.forEach(request => { %>
                <li class="list-group-item">
                    <strong>User:</strong> <%= request.user.name %><br>
                    <strong>Date:</strong> <%= request.date ? request.date.toDateString() : 'N/A' %><br>
                    <strong>Reason:</strong> <%= request.reason %><br>
                    <form action="/admin/attendance-rectification/<%= request._id %>/approve" method="POST">
                        <button type="submit" name="action" value="approve" class="btn btn-success">Approve</button>
                        <button type="submit" name="action" value="decline" class="btn btn-danger">Decline</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </main>

    <footer class="bg-light text-center py-3">
        <p>&copy; 2024 Your Company</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
