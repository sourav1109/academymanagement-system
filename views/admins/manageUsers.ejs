<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        h1, h3 {
            color: #333;
        }
        .table thead th {
            background-color: #007bff;
            color: white;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .btn {
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-danger:hover {
            background-color: #dc3545cc;
        }
        .btn-success:hover {
            background-color: #28a745cc;
        }
        .form-control {
            border: 2px solid #007bff;
            border-radius: 5px;
        }
        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-back:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Users</h1>
            <a href="/admins/register-user" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Register New User
            </a>
        </div>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <div class="row g-4">
            <!-- Staff Section -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Staff</h3>
                        <input class="form-control mb-3" id="staffSearch" type="text" placeholder="Search Staff">
                        <div id="staffList" class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>uid</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.filter(user => user.role === 'staff').forEach(user => { %>
                                        <tr>
                                            <td><%= user.name %></td>
                                            <td><%= user.uid %></td>
                                            <td><%= user.active ? 'Active' : 'Inactive' %></td>
                                            <td>
                                                <form action="/admins/users/<%= user._id %>/toggle" method="POST" class="d-inline-block">
                                                    <button type="submit" class="btn btn-sm <%= user.active ? 'btn-danger' : 'btn-success' %>">
                                                        <%= user.active ? 'Deactivate' : 'Activate' %>
                                                    </button>
                                                </form>
                                                <a href="/admins/users/<%= user._id %>/view" class="btn btn-sm btn-primary">View Details</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Students Section -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Students</h3>
                        <input class="form-control mb-3" id="studentSearch" type="text" placeholder="Search Students">
                        <div id="studentList" class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.filter(user => user.role === 'student').forEach(user => { %>
                                        <tr>
                                            <td><%= user.name %></td>
                                            <td><%= user.uid %></td>
                                            <td><%= user.active ? 'Active' : 'Inactive' %></td>
                                            <td>
                                                <form action="/admins/users/<%= user._id %>/toggle" method="POST" class="d-inline-block">
                                                    <button type="submit" class="btn btn-sm <%= user.active ? 'btn-danger' : 'btn-success' %>">
                                                        <%= user.active ? 'Deactivate' : 'Activate' %>
                                                    </button>
                                                </form>
                                                <a href="/admins/users/<%= user._id %>/view" class="btn btn-sm btn-primary">View Details</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="/admins/dashboard" class="btn btn-back">Back to Dashboard</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#staffSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#staffList tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            $("#studentSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#studentList tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</body>
</html>
