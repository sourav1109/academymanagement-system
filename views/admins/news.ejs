<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News and Events Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleEditForm(id) {
            const editForm = document.getElementById(`edit-form-${id}`);
            editForm.style.display = editForm.style.display === 'none' ? 'block' : 'none';
        }
    </script>
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: #fff;
            font-family: 'Arial', sans-serif;
        }
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: none;
        }
        .btn {
            border-radius: 20px;
        }
        .btn-primary, .btn-success {
            background-color: #4caf50;
            border-color: #4caf50;
        }
        .btn-secondary {
            background-color: #2196f3;
            border-color: #2196f3;
        }
        .btn-danger {
            background-color: #f44336;
            border-color: #f44336;
        }
        .container {
            margin-top: 30px;
        }
    </style>
</head>
<body>
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-center">News and Events Management</h1>
        <a href="/dashboard" class="btn btn-light">Back to Dashboard</a>
    </div>

    <!-- Add News Form -->
    <div class="card shadow-sm p-4 mb-5">
        <h2 class="mb-3">Add News/Event</h2>
        <form action="/admins/news" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <input type="text" name="title" class="form-control" placeholder="Title" required>
            </div>
            <div class="mb-3">
                <input type="date" name="date" class="form-control" required>
            </div>
            <div class="mb-3">
                <input type="text" name="location" class="form-control" placeholder="Location" required>
            </div>
            <div class="mb-3">
                <textarea name="description" class="form-control" placeholder="Description" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Upload Media:</label>
                <input type="file" name="media" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Add News</button>
        </form>
    </div>

    <!-- Display All News -->
    <h2 class="mb-4">All News/Events</h2>
    <div class="row">
        <% newsList.forEach(news => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title"><%= news.title %></h3>
                        <p class="card-text">Date: <%= new Date(news.date).toDateString() %></p>
                        <p class="card-text">Location: <%= news.location %></p>
                        <p class="card-text"><%= news.description %></p>

                        <% if (news.mediaType === 'image') { %>
                            <img src="<%= news.media %>" alt="News Image" class="img-fluid rounded">
                        <% } else if (news.mediaType === 'video') { %>
                            <video src="<%= news.media %>" controls class="img-fluid rounded"></video>
                        <% } %>

                        <div class="mt-3 d-flex justify-content-between">
                            <button class="btn btn-secondary" onclick="toggleEditForm('<%= news._id %>')">Edit</button>
                            <form action="/admins/news/<%= news._id %>/delete" method="POST">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </div>

                        <!-- Edit News Form -->
                        <form id="edit-form-<%= news._id %>" action="/admins/news/<%= news._id %>/edit" method="POST" enctype="multipart/form-data" style="display: none; margin-top: 20px;">
                            <div class="mb-3">
                                <input type="text" name="title" class="form-control" value="<%= news.title %>">
                            </div>
                            <div class="mb-3">
                                <input type="date" name="date" class="form-control" value="<%= news.date.toISOString().substring(0, 10) %>">
                            </div>
                            <div class="mb-3">
                                <input type="text" name="location" class="form-control" value="<%= news.location %>">
                            </div>
                            <div class="mb-3">
                                <textarea name="description" class="form-control" rows="3"><%= news.description %></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Change Media:</label>
                                <input type="file" name="media" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-success">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</body>
</html>
